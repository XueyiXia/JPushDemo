<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/friend_share_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#333333"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:foregroundGravity="bottom|center_horizontal"
        android:layout_marginTop="20dp"
        android:text="微信朋友圈分享"/>

    <ImageView
        android:id="@+id/we_chat_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/friend_share_title"
        android:background="@mipmap/umeng_socialize_wxcircle" />
</RelativeLayout>
